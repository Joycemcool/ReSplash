@page
@model RePlash.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Photo.PhotoId" />
            <div class="form-group">
                <label asp-for="Photo.FileName" class="control-label"></label>
                <input asp-for="Photo.FileName" class="form-control" />
                <span asp-validation-for="Photo.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo.PublishDate" class="control-label"></label>
                <input asp-for="Photo.PublishDate" class="form-control" />
                <span asp-validation-for="Photo.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo.NumViews" class="control-label"></label>
                <input asp-for="Photo.NumViews" class="form-control" />
                <span asp-validation-for="Photo.NumViews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo.numDownloads" class="control-label"></label>
                <input asp-for="Photo.numDownloads" class="form-control" />
                <span asp-validation-for="Photo.numDownloads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo.Description" class="control-label"></label>
                <input asp-for="Photo.Description" class="form-control" />
                <span asp-validation-for="Photo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
